<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/black"
    android:orientation="vertical" >
  <TextView
      android:textColor="#ffffff"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="14dp"
      android:text="Please select a demo:"/> 
  <Button
      android:id="@+id/btn_video_list"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Video List"
      android:textColor="#ffffff" />
  <Button
      android:id="@+id/btn_simple_playerview"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Simple PlayerView"
      android:textColor="#ffffff" />
  <Button
      android:id="@+id/btn_simple_playerfragment"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Simple PlayerFragment"
      android:textColor="#ffffff" />
  <Button
      android:id="@+id/btn_custom_player_control"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Custom Player Controls"
      android:textColor="#ffffff" />
  <Button
      android:id="@+id/btn_custom_fullscreen_handling"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Custom Fullscreen Handling"
      android:textColor="#ffffff" />
  <Button
      android:id="@+id/btn_standalone_player"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Standalone Player"
      android:textColor="#ffffff" />
  <Button
      android:id="@+id/btn_youtube_launcher_intent"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Youtube App Launcher Intents"
      android:textColor="#ffffff" />
  <Button
      android:id="@+id/btn_video_wall"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Videl Wall"
      android:textColor="#ffffff" />
</LinearLayout>